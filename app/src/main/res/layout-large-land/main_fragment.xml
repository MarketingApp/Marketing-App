<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_menu_margin_top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_add_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/add_phone" />

        <ImageView
            android:layout_marginTop="@dimen/main_menu_margin_top"
            android:id="@+id/iv_manager_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/phone_manager" />

        <ImageView
            android:id="@+id/iv_add_group"
            android:layout_marginTop="@dimen/main_menu_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/add_group" />
        <ImageView
            android:id="@+id/iv_manager_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_menu_margin_top"
            android:layout_weight="1"
            android:src="@mipmap/group_manager" />

        <ImageView
            android:id="@+id/iv_send_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_menu_margin_top"
            android:layout_weight="1"
            android:src="@mipmap/send" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/rv_margin_top">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>